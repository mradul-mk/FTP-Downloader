{
    "manifest_version": 3,
    "name": "FTP-Downloader",
    "version": "1.0",
    "description": "Download all files and folders recursively from an FTP server.",
    "permissions": ["downloads", "scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon1.png",
        "48": "icon2.png",
        "128": "icon3.png"
      }
    }
  }
  